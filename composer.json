{
  "name": "bricebou/better-typography",
  "type": "grav-plugin",
  "description": "Automatically improves the typography of your content. Provides a Twig filter.",
  "keywords": ["plugin"],
  "homepage": "https://github.com/bricebou/grav-plugin-better-typography",
  "license": "MIT",
  "authors": [
    {
      "name": "Brice Boucard",
      "email": "brice@reclic.dev",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=7.1.3",
    "mundschenk-at/php-typography": "^6.6"
  },
  "autoload": {
    "psr-4": {
      "Grav\\Plugin\\BetterTypography\\": "classes/"
    },
    "classmap":  ["better-typography.php"]
  },
  "config": {
    "platform": {
      "php": "7.1.3"
    }
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.6"
  }
}
